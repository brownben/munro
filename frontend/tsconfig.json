{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "sourceMap": false,
    "baseUrl": ".",
    "noEmit": true,
    "lib": ["esnext", "dom"],
    "types": ["node", "vite/client"],
    "typeRoots": ["./types", "../node_modules/@types"],
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
